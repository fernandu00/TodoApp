<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@500&family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
    <title>Todo App</title>
</head>
<body>
    <div class="container">
        <h1>Todo List</h1>
        <form class="form" action="/todo" method="post">
            <!-- <label for="addTodo">Add Todo</label> -->
            <input type="text" placeholder="New todo" name="todo">
            <input class="add" type="submit" value="Add">
        </form>
    </div>

        <div class="container-todo">
        
            <ol class="list">
                <%todoList.forEach(todo => { %>
                    
                    
                    <li><%=todo.name%>
                        <form action="/todo/delete/<%=todo._id%>" method="POST">
                            <input type="submit" value="Delete" class="delete"> </form>
                    </li>
                <%})%>
                
            </ol>
        
        </div>
    
    

    

</body>
</html>